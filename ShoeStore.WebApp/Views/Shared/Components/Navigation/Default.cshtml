﻿@using SmartPhoneStore.ViewModels.Catalog.Categories
@model List<CategoryViewModel>
<!-- NAVIGATION -->
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <ul class="main-nav nav navbar-nav">
                <li class="active"><a href="/">Trang chủ</a></li>
                @foreach (var category in Model)
                {
                    <li>
                        <a asp-action="ViewByCategory" asp-controller="Home" asp-route-categoryId="@category.Id">@category.Name</a>
                    </li>
                }
            </ul>
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
<!-- /NAVIGATION -->
