@model List<ShoeStore.ViewModels.Catalog.Categories.CategoryViewModel>

<div id="sidebar" class="span3">
    <div class="well well-small"><a id="myCart" href="product_summary.html">Danh mục</a></div>
    <ul id="sideManu" class="nav nav-tabs nav-stacked">
        @foreach(var item in Model.Where(x=>x.ParentId == null))
        {
            var children = Model.Where(x => x.ParentId == item.Id);
            var parent = children.Count() > 0 ? "class=\"dropdown-toggle\" data-toggle=\"dropdown\"":"";
            if (children.Count() > 0)
            {
                <li class="subMenu open">
                    <a>@children</a>
                    <ul>
                        @foreach(var childItem in children)
                        {
                            <li><a class="active" href="/categories/@childItem.Id"><i class="icon-chevron-right"></i>@childItem.Name</a></li>
                        }
                    </ul>
                </li>
            }
            else
            {
                <li><a class="active" href="/categories/@children.">@parent</a></li>
            }
        }

    </ul>
